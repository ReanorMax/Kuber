{
  "dashboard": {
    "id": null,
    "title": "Application Monitoring - Learning Dashboard",
    "tags": ["kubernetes", "application", "monitoring", "learning"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Application Health Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "count(kube_deployment_status_replicas{namespace=\"$namespace\"})",
            "legendFormat": "Deployments",
            "refId": "A"
          },
          {
            "expr": "sum(kube_deployment_status_replicas{namespace=\"$namespace\"})",
            "legendFormat": "Total Replicas",
            "refId": "B"
          },
          {
            "expr": "sum(kube_deployment_status_ready_replicas{namespace=\"$namespace\"})",
            "legendFormat": "Ready Replicas",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Pod Restarts (Last 24h)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "increase(kube_pod_container_status_restarts_total{namespace=\"$namespace\"}[24h])",
            "legendFormat": "{{pod}} / {{container}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 3,
        "title": "CPU Usage by Pod",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 4,
        "title": "Memory Usage by Pod",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}) by (pod)",
            "legendFormat": "{{pod}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "bytes",
            "min": 0
          }
        }
      },
      {
        "id": 5,
        "title": "Network I/O by Pod",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(container_network_receive_bytes_total{namespace=\"$namespace\"}[5m])) by (pod)",
            "legendFormat": "RX {{pod}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_network_transmit_bytes_total{namespace=\"$namespace\"}[5m])) by (pod)",
            "legendFormat": "TX {{pod}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "binBps"
          }
        }
      },
      {
        "id": 6,
        "title": "Disk I/O by Pod",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "sum(rate(container_fs_reads_bytes_total{namespace=\"$namespace\"}[5m])) by (pod)",
            "legendFormat": "Read {{pod}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_fs_writes_bytes_total{namespace=\"$namespace\"}[5m])) by (pod)",
            "legendFormat": "Write {{pod}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "binBps"
          }
        }
      },
      {
        "id": 7,
        "title": "HTTP Request Rate (if available)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{namespace=\"$namespace\"}[5m])) by (ingress)",
            "legendFormat": "{{ingress}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 8,
        "title": "HTTP Response Codes",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(nginx_ingress_controller_requests{namespace=\"$namespace\"}[5m])) by (status)",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 9,
        "title": "Pod Resource Limits vs Usage",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum(container_spec_cpu_quota{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}/container_spec_cpu_period{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}) by (pod)",
            "format": "table",
            "legendFormat": "CPU Limit",
            "refId": "A"
          },
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}[5m])) by (pod)",
            "format": "table",
            "legendFormat": "CPU Usage",
            "refId": "B"
          },
          {
            "expr": "sum(container_spec_memory_limit_bytes{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}) by (pod)",
            "format": "table",
            "legendFormat": "Memory Limit",
            "refId": "C"
          },
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"$namespace\",container!=\"POD\",container!=\"\"}) by (pod)",
            "format": "table",
            "legendFormat": "Memory Usage",
            "refId": "D"
          }
        ],
        "transformations": [
          {
            "id": "merge"
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "pod": "Pod Name"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byRegexp", "options": "Memory.*"},
              "properties": [{"id": "unit", "value": "bytes"}]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(kube_pod_info, namespace)",
          "refresh": 1,
          "includeAll": false,
          "current": {
            "value": "default",
            "text": "default"
          }
        },
        {
          "name": "deployment",
          "type": "query",
          "query": "label_values(kube_deployment_info{namespace=\"$namespace\"}, deployment)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "changes(kube_deployment_status_observed_generation{namespace=\"$namespace\"}[1h])",
          "iconColor": "blue",
          "titleFormat": "Deployment Updated",
          "textFormat": "{{deployment}} updated"
        }
      ]
    },
    "editable": true,
    "gnetId": null,
    "graphTooltip": 1,
    "hideControls": false,
    "links": [],
    "schemaVersion": 16,
    "version": 1
  }
}
